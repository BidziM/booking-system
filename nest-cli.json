{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "/mail/templates/**/*", "outDir": "dist/src" },
      { "include": "/pdf-generator/templates/**/*", "outDir": "dist/src" },
      { "include": "./selfsigned.crt", "outDir": "dist/src" },
      { "include": "./selfsigned.key", "outDir": "dist/src" }
    ],
    "watchAssets": true 
  }
}
